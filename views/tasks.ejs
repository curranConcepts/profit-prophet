<body>
    <div class="navbar bg-base-100">
        <div class="flex-1">
          <a class="btn btn-ghost normal-case text-xl" href="/dashboard">Profit Prophet</a>
        </div>
        <div class="flex-none">
          <ul class="menu menu-horizontal p-0">
            <li><a href="/entries">Entries</a></li>
            <li><a href="/tasks">Tasks</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </div>
    </div>
    <div class="card rounded-box place-items-center text-2xl p-4">
        <h1>Tasks</h1>
        <p class="text-m text-center">Create and mannage the tasks that you wish to track.</p>
    </div>
    <div class="flex flex-row w-full border-opacity-50">
        <div class="card-bordered glass p-4 m-4 h-50">
            <div class="card-body items-center">
                <h2 class="card-title text-2xl underline my-auto">New Task</h2>
                <form action="/tasks/createTask" method='POST'>
                    <div class="flex flex-col">
                        <input type="text" placeholder="Task Name" name='task' class="input input-bordered input-primary input-sm max-w-xs"><br>
                        <div class="flex flex-row">
                        <input id="quarter" type="number" step="any" placeholder="$Rate" name='pay' class="input input-bordered input-primary input-sm max-w-xs"><br>
                        <select id="measure" name="measure" class="select select-primary select-sm max-w-xs">
                            <option disabled selected>Meas.</option>
                            <option value="ft">ft</option>
                            <option value="yrd">yrd</option>
                            <option value="sqft">sqft</option>
                            <option value="sqyrd">sqyrd</option>
                        </select>
                        </div>
                    </div>
                <br>
                <div class="flex justify-center">
                    <input type="submit" class="btn rounded w-60 px-1 btn-accent btn-outline m-6">
                </div>
                </form>
            </div>
        </div>
        <div class="divider my-8 place-items-center"></div>
