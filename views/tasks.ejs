        <div class="flex flex-wrap">
        <% tasks.forEach(task => { %>
            <div class="card-bordered w-60 bg-primary m-4 text-secondary-focus">
                <div class="card-body">
                    <h2 class="card-title text-primary-content underline"><%= task.task %></h2>
                    <p>Pay: $<%= task.pay %></p>
                    <p>Measure: <%= task.measure %></p>
                     <!-- this needs logic to show the hourly rate for the task -->
                    <p>/hr: $</p>
                    <div class="card-actions justify-end">
                        <form
                            action="/tasks/deleteTask/<%= task._id %>?_method=DELETE"
                            method="POST"
                            class="col-3"
                            >
                            <button class="fa fa-trash" type="submit"></button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
        </div>
